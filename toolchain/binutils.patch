From 4e55876eb55051f6eb7d339da14e424a93a09800 Mon Sep 17 00:00:00 2001
From: nwon24 <WON0128@mhs.vic.edu.au>
Date: Fri, 28 Jan 2022 22:09:07 +1100
Subject: [PATCH] Hobbix toolchain

---
 bfd/config.bfd    | 13 +++++++++++++
 config.sub        |  3 ++-
 gas/configure.tgt |  1 +
 ld/Makefile.am    |  9 +++++++++
 ld/configure.tgt  |  9 +++++++++
 5 files changed, 34 insertions(+), 1 deletion(-)

diff --git a/bfd/config.bfd b/bfd/config.bfd
index cfe58247..426f6a31 100644
--- a/bfd/config.bfd
+++ b/bfd/config.bfd
@@ -240,6 +240,19 @@ esac
 
 case "${targ}" in
 # START OF targmatch.h
+  i[3-7]86-*-hobbix*)
+    targ_defvec=i386_elf32_vec
+    targ_selvecs=
+    targ64_selvecs=x86_64_elf64_vec
+    ;;
+#ifdef BFD64
+  x86_64-*-hobbix*)
+    targ_defvec=x86_64_elf64_vec
+    targ_selvecs=i386_elf32_vec
+    want64=true
+    ;;
+#endif
+
 #ifdef BFD64
   aarch64-*-darwin*)
     targ_defvec=aarch64_mach_o_vec
diff --git a/config.sub b/config.sub
index dba16e84..73baf98d 100755
--- a/config.sub
+++ b/config.sub
@@ -1754,7 +1754,8 @@ case $os in
 	     | onefs* | tirtos* | phoenix* | fuchsia* | redox* | bme* \
 	     | midnightbsd* | amdhsa* | unleashed* | emscripten* | wasi* \
 	     | nsk* | powerunix* | genode* | zvmoe* | qnx* | emx* | zephyr* \
-	     | fiwix* )
+	     | fiwix* \
+	     | hobbix* )
 		;;
 	# This one is extra strict with allowed versions
 	sco3.2v2 | sco3.2v[4-9]* | sco5v6*)
diff --git a/gas/configure.tgt b/gas/configure.tgt
index 62f806bd..d17d1b6d 100644
--- a/gas/configure.tgt
+++ b/gas/configure.tgt
@@ -221,6 +221,7 @@ case ${generic_target} in
   h8300-*-elf)				fmt=elf ;;
   h8300-*-linux*)			fmt=elf em=linux ;;
 
+  i386-*-hobbix*)                       fmt=elf ;;
   i386-*-beospe*)			fmt=coff em=pe ;;
   i386-*-beos*)				fmt=elf ;;
   i386-*-elfiamcu)			fmt=elf arch=iamcu ;;
diff --git a/ld/Makefile.am b/ld/Makefile.am
index b55a873d..5308b6fa 100644
--- a/ld/Makefile.am
+++ b/ld/Makefile.am
@@ -278,6 +278,7 @@ ALL_EMULATION_SOURCES = \
 	eelf32xtensa.c \
 	eelf32z80.c \
 	eelf_i386.c \
+	eelf_i386_hobbix.c \
 	eelf_i386_be.c \
 	eelf_i386_fbsd.c \
 	eelf_i386_haiku.c \
@@ -375,6 +376,13 @@ ALL_EMULATION_SOURCES = \
 	ez8001.c \
 	ez8002.c
 
+eelf_i386_hobbix.c: $(srcdir)/emulparams/elf_i386_hobbix.sh \
+  $(ELF_DEPS) $(srcdir)/scripttempl/elf.sc ${GEN_DEPENDS}
+	${GENSCRIPTS} elf_i386_hobbix "$(tdir_elf_i386_hobbix)"
+eelf_x86_64_hobbix.c: $(srcdir)/emulparams/elf_x86_64_hobbix.sh \
+  $(ELF_DEPS) $(srcdir)/scripttempl/elf.sc ${GEN_DEPENDS}
+	${GENSCRIPTS} elf_i386_hobbix "$(tdir_elf_i386_hobbix)"
+
 ALL_EMULATIONS = $(ALL_EMULATION_SOURCES:.c=.@OBJEXT@)
 
 ALL_64_EMULATION_SOURCES = \
@@ -460,6 +468,7 @@ ALL_64_EMULATION_SOURCES = \
 	eelf_l1om_fbsd.c \
 	eelf_mipsel_haiku.c \
 	eelf_x86_64.c \
+	eelf_x86_64_hobbix.c \
 	eelf_x86_64_cloudabi.c \
 	eelf_x86_64_fbsd.c \
 	eelf_x86_64_haiku.c \
diff --git a/ld/configure.tgt b/ld/configure.tgt
index c7acf3f1..11895cea 100644
--- a/ld/configure.tgt
+++ b/ld/configure.tgt
@@ -43,6 +43,15 @@ targ64_extra_libpath=
 # Please try to keep this table more or less in alphabetic order - it
 # makes it much easier to lookup a specific archictecture.
 case "${targ}" in
+i[3-7]86-*-hobbix*)
+                        targ_emul=elf_i386_hobbix
+			targ_extra_emuls=elf_i386
+			targ64_extra_emuls="elf_x86_64_hobbix elf_x86_64"
+			;;
+x86_64-*-hobbix*)
+                        targ_emul=elf_x86_64_hobbix
+			targ_extra_emuls="elf_i386_hobbix elf_x86_64 elf_i386"
+			;;
 aarch64_be-*-elf)	targ_emul=aarch64elfb
 			targ_extra_emuls="aarch64elf aarch64elf32 aarch64elf32b armelfb armelf"
 			;;
